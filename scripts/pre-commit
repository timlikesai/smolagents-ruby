#!/usr/bin/env bash
#
# Pre-commit hook that runs RuboCop on staged Ruby files.
# This ensures code quality before commits are created.

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo -e "${YELLOW}Running RuboCop pre-commit check...${NC}"

# Get list of staged Ruby files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(rb|rake|gemspec)$' || true)

if [ -z "$STAGED_FILES" ]; then
    echo -e "${GREEN}No Ruby files staged, skipping RuboCop.${NC}"
    exit 0
fi

echo "Checking files:"
echo "$STAGED_FILES" | sed 's/^/  /'

# Run RuboCop on staged files only
# Using --force-exclusion to respect .rubocop.yml exclusions
if bundle exec rubocop --force-exclusion $STAGED_FILES; then
    echo -e "${GREEN}RuboCop passed!${NC}"
    exit 0
else
    echo ""
    echo -e "${RED}RuboCop found offenses. Please fix them before committing.${NC}"
    echo -e "${YELLOW}Tip: Run 'bundle exec rubocop -A' to auto-fix correctable offenses.${NC}"
    exit 1
fi
